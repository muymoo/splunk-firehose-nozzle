---

applications:
  - name: splunk-firehose-nozzle
    memory: 64M
    instances: 2
    buildpack: https://github.com/cloudfoundry/go-buildpack#v1.8.5
    health-check-type: none
    no-route: true
    command: splunk-firehose-nozzle
    env:
      GOPACKAGENAME: github.com/cloudfoundry-community/splunk-firehose-nozzle
      SKIP_SSL_VALIDATION: false
      ADD_APP_INFO: true
      API_ENDPOINT: <replace me>
      API_USER: <replace me>
      API_PASSWORD: <replace me>
      # Valid values include ValueMetric,CounterEvent,Error,LogMessage,HttpStartStop,ContainerMetric
      EVENTS: LogMessage
      SPLUNK_TOKEN: <replace me>
      SPLUNK_HOST: <replace me>
      SPLUNK_INDEX: <replace me>
